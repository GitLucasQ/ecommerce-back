<div class="row justify-content-md-center m-5">
    <div class="col-md-auto">
        <div class="row">
            <h2 class="font-weight-bold text-primary">
                Ingrese un nuevo producto
            </h2>
        </div>
        <form onsubmit="addProduct(this); return false">
            <div class="form-group">
                <label>Nombre</label>
                <input class="form-control" type="text" name="name" id="name" placeholder="Nombre del producto">
            </div>
            <div class="form-group">
                <label>Precio</label>
                <input class="form-control" type="number" name="price" id="price" min="0">
            </div>
            <div class="form-group">
                <label>Foto URL</label>
                <input class="form-control" type="text" name="photo" id="photo" placeholder="Foto">
            </div>
            <button type="submit" class="btn btn-success">
                Enviar
            </button>
        </form>
    </div>
</div>